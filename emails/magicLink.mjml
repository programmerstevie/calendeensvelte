<mjml>
  <mj-head>
    <mj-preview>Your Sign-in Link to {{appName}} - Get Started!</mj-preview>
    <mj-style> .button a { text-decoration: none; } </mj-style>
  </mj-head>
  <mj-body>
    <mj-section padding="20px 0" background-color="#f9fafb">
      <mj-column>
        <mj-image src={{headerImageSrc}} alt="{{appName}} Header Image" width="600px" fluid-on-mobile="true" />
        <mj-text font-size="24px" color="#4f46e5" font-weight="bold" align="center" padding-top="30px" padding-bottom="10px" text-transform="uppercase"> {{appName}} </mj-text>
        <mj-text font-size="20px" color="#111827" font-weight="normal" align="center" padding="12px 25px" line-height="24px"> Sign in to <strong style="font-weight: bold;">{{appName}}</strong><br /> to {{actionDescription}} </mj-text>
        <mj-button href="{{signInLink}}" height="60px" width="150px" border-radius="8px" background-color="#4f46e5" color="#ffffff" padding="20px" font-size="18px" font-weight="bold" align="center" css-class="button"> SIGN IN </mj-button>
        <mj-text font-size="14px" color="#6b7280" align="center" padding="20px 25px"> If you didn't request this email, you can safely ignore it. </mj-text>
        <mj-text font-size="14px" color="#6b7280" align="center" padding="10px 25px"> If you believe you received this email by mistake, please contact our support team<br/><a href="mailto:{{supportEmail}}" style="color: #4f46e5;">{{supportEmail}}</a>. </mj-text>
      </mj-column>
    </mj-section>
    <mj-section background-color="#f9fafb" padding="0 25px">
      <mj-column>
        <mj-text font-size="12px" color="#6b7280" align="center"> Â© {{year}} {{appName}}, All rights reserved. </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>